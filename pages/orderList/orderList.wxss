/* 支付弹窗 */
.tip{
  text-align: center;
  font-size: 30rpx;
  color: #232323;
  line-height: 88rpx;
  border-bottom: 1rpx solid #E1E1E1;
  position: relative;
}
.tip .iconfont{
  position: absolute;
  top: 0rpx;
  right: 20rpx;
}
.password-money{
  text-align: center;
  color: #1678FF;
  font-weight: bold;
  font-size: 50rpx;
  line-height: 117rpx;
}
.btn-bottom{
  width: calc(100% - 40rpx);
  margin-left: 20rpx;
  font-size: 32rpx;
  color: white;
  line-height: 88rpx;
  background-color: #1678FF;
  text-align: center;
  border-radius: 88rpx;
