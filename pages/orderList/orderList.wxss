/* pages/orderList/orderList.wxss */
page { background: #f5f5f5 ; }
.swiper-tab { width: 100% ; overflow: hidden ; background: #fff ; position: fixed ; top : 0 ; z-index: 100 ;}
.swiper-tab-list { width: 20% ; height: 142rpx; float:  left ; text-align: center ; font-size: 26rpx ; margin : 0 2.5% ;}
.swiper-tab-list .tabImg { width: 60rpx ; height: 60rpx ; margin-bottom : 35rpx ; margin : 15rpx auto ;}
.swiper-tab-list .tabImg image { width: 60rpx ; height : auto ; display: block ; }
.active { border-bottom : 4rpx solid #1678FF ;}

.zwf { height :  162rpx ; width: 100% ;z-index: 999;}
/* .shadowLine { width: 100% ; height : 20rpx ;  background: #f5f5f5 ; } */


.order { width: calc(100% - 60rpx) ;margin-left: 30rpx; background: #fff ;margin-bottom: 20rpx;border-radius: 10rpx;}
.orderTop { padding : 20rpx ; overflow: hidden; border-bottom : 1rpx solid #dddddd ; color : #666666 ;font-size: 28rpx;}
.orderNumber { float: left ; }
.orderStatus { float: right ;color : #1678FF ;font-size: 20rpx; display: flex;align-items: center;line-height: 38rpx!important;}
.title {font-size: 30rpx ;}
.time , .address{ color : #666666 ; font-size: 22rpx ; }
.orderBox{margin: 0rpx 20rpx; padding: 20rpx 0rpx;border-bottom: 1rpx solid #E1E1E1;display: flex;}
.order-box-left{width: 100rpx;margin-right: 9rpx;}
.order-box-left image{width: 100%;height: auto;border-radius: 10rpx;}
.order-box-right{width: calc(100% - 120rpx);}
.orderBottom {overflow: hidden ;font-size: 22rpx ; width: 100% ;padding: 20rpx;box-sizing: border-box;display: flex;align-items: center;justify-content: space-between;}
.btn view { display: inline-block ; padding : 10rpx 20rpx ; border : 1rpx solid #dddddd ; border-radius: 37rpx ;} 
.btn view:nth-child(2){margin-left: 17rpx;}
.btn .payNow { border : 1rpx solid #1678FF ; color : #1678FF ;}
