 page {position: relative ;}
 .map {  height: 100%;  width: 100%; }
.map_container{  height: 748rpx ;   width: 100%;  } 
.myMap { width: 100% ;}
.map { height: 100%;  width: 100%; } 
image { width: 100% ; height : 100% ; display: block ; }
.input { overflow: hidden ;}
.input input {background: #f5f5f5 ;padding : 5rpx 50rpx 5rpx 10rpx; text-align: center ; width: 400rpx  ; height : 50rpx ; line-height: 50rpx ;  margin-left : 100rpx ; font-size: 28rpx ; float: left ; margin-bottom : 20rpx ;}
.input .img { width: 80rpx ; height : 50rpx ; float: left ; position: relative ;  background: #f5f5f5 ;line-height: 50rpx ;padding : 5rpx 10rpx;}
.input .img .imgBox { width: 35rpx ; height : 35rpx ; margin-top : 10rpx ; border-left : 1rpx solid #979797; padding-left : 15rpx ;position: relative;}
.changyong { font-size: 28rpx ; float: left ; line-height: 50rpx ; margin-left : 15rpx ; }
.cityList { position: fixed ; top : 70rpx ; z-index: 1000 ; background: #fff ; width: 100% ;}
.cityList view{ padding : 10rpx 0 10rpx 40rpx ; font-size: 28rpx ; border-bottom: 1rpx solid #ddd ; overflow: hidden ; white-space: nowrap ;  text-overflow:ellipsis;}
.cover{ position: fixed ; top : 70rpx ; z-index: 999 ; background: #555 ; opacity: 0.6 ; width: 100% ; height : 100% ;}
.del { width: 25rpx ; height : 25rpx ; float: left ; position: absolute ; left: 530rpx ; top : 20rpx ;}
.show{display: block ;}
.hide{display: none ;}
.station { font-size: 28rpx ; padding : 28rpx 26rpx; border-bottom : 1rpx solid #ddd ; color : #666 ;}
.botmAddress { font-size: 28rpx ; padding : 28rpx 26rpx; border-bottom : 1rpx solid #ddd ; color : #333333 ;display: flex;align-items: center;}
.addressText {width: 90% ;display: inline-block ; }
.botmAddress .addressImg { width: 30rpx ; height : 40rpx ; display: inline-block ; margin-right : 15rpx ; }
.nig { font-size: 28rpx ; padding : 28rpx 26rpx; border-bottom : 1rpx solid #ddd ; color : #333333 ;}
.tit , .adres { display: inline-block ; }
.tit { margin-right : 32rpx ; }
.zfw { height : 110rpx ;  }
.btn { width: 100% ; height : 80rpx ; line-height: 80rpx ; color :  #fff ; background: #1678FF ; font-size: 34rpx ; text-align: center ; position: fixed ; bottom : 0 ; } 
