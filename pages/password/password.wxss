page{
  background-color: #F0F0F0;
}
.password_outer{
}
.password_top_outer{
  background-color: white;
  padding: 0rpx 20rpx;
}
.password_phone{
  display: flex;
  justify-content: space-between;
  height: 89rpx;
  color: #666666;
  border-bottom: 1rpx solid #E1E1E1;
}
.password_phone_left{
  height: 100%;
  width: 60%;
  font-size: 30rpx;  
}
.password_phone_right{
  width: 40%;
  height: 100%;
  font-size: 30rpx;
  text-align: center;
  line-height: 89rpx;
  text-align: right;
}
.password_code,.password_six,.password_six_two{
  height: 89rpx;
  color: #666666;
}
.password_code,.password_six{
  border-bottom: 1rpx solid #E1E1E1;
}
.password_code_input,.password_six_input,.password_six_two_input{
  font-size: 30rpx;
  height: 100%;
  width: 100%;
}
/* 提示信息 */
.title_text{
  font-size: 30rpx;
  color: #666666;
  margin-left: 20rpx;
  padding: 30rpx 0rpx;
}
.password_btn{
  width: calc(100% - 40rpx);
  margin-left: 20rpx;
  height: 90rpx;
  background-color: #1678FF;
  color: white;
  font-size: 32rpx;
  padding: 0rpx;
  line-height: 90rpx;
  border-radius: 90rpx;
}