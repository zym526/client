.address-outer{
  padding: 0rpx 30rpx;
  box-sizing: border-box;
}
.address-one-outer{
  padding: 30rpx 0rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  border-bottom: 3rpx solid #E1E1E1;
}
.address-left{
  display: flex;
  width: calc(100% - 111rpx);
  align-items: center;
}
.address-img{
  margin: 0rpx 20rpx;
  width: 80rpx;
  height:80rpx;
  border-radius: 80rpx;
  background-color: rgba(255,102,0,0.3);
  display: flex;
  justify-content: center;
  align-items: center;
}
.address-text-outer{
  width: calc(100% - 140rpx);
  padding-right: 24rpx;
  box-sizing: border-box;
  margin-left: 20rpx;
}
.address-name-outer{
  font-size: 30rpx;
  color: #232323;
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
}
.address-def{
  font-size: 22rpx;
  line-height: 30rpx;
  display: inline-block;
  width: 59rpx;
  background-color: rgba(255,102,0,0.3);
  text-align: center;
  color: #FF6600;
  margin-left: 10rpx;
}
.address-phone,.address-text-all{
  font-size: 26rpx;
  color: #666666;
}
.address-text-all{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.address-right{
  width: 111rpx;
  font-size: 26rpx;
  color: #999999;
  display: flex;
  align-items: center;
  justify-content: center;
  border-left: 3rpx solid #CECECE;
}
.add-new-bottom{
  position: fixed;
  bottom: 20rpx;
  left: 45rpx;
  right: 45rpx;
  font-size: 32rpx;
  line-height: 88rpx;
  background-color: #187AFF;
  color: white;
  border-radius: 88rpx;
  text-align: center;
}
/* 暂无车辆信息 */
.empty{
  text-align: center;
}
.empty image{
  margin-top: 100rpx;
  width: 220rpx;
  height: auto;
}
.empty view{
  font-size: 28rpx;
  color: #999999;
  margin-top: 30rpx;
}
/* 默认的显示与隐藏 */
.hidden{
  display: none;
}
.show{
  display: inline-block;
}